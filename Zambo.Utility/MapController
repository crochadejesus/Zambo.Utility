using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.Mvc;

namespace Value.Site.Controllers
{
    public class MapController : Controller
    {
        // GET: Map
        public ActionResult Index()
        {
            return View("Portugal/Portugal");
        }

        [HttpPost]
        [OutputCache(Duration = int.MaxValue)]
        public ActionResult RenderDistrict(string district)
        {
            return PartialView("Portugal/Districts/" + district);
        }
    }
}
